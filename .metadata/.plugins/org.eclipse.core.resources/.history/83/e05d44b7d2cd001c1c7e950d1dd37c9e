package dataBaseConnectivity;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.sql.Statement;

class FileStoreInADatabase {

	public static void main(String[] args) {
		//String sql="create table filetable(id number(38), file clob)";
		
		String createTableQuery = "create table FILESTORE("
				+ "FILE_ID NUMBER(5) NOT NULL, "
				+ "NAME CLOB NOT NULL, "
				+ "PRIMARY KEY (FILE_ID) )";
	 
	 
	       
		try {
		
			Connection mycon=DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","oracle");
			PreparedStatement state=mycon.prepareStatement(createTableQuery);
			state.execute();
			
							  
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}
