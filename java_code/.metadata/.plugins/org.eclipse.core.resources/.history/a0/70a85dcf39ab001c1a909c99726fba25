package com.chainsys.introduction;
import java.util.*;

public class Sixth {
	public static void main(String[]args) {
		
	}
	public static void checkUserName() {
		System.out.println("Enter your name");
		Scanner sc=new Scanner(System.in);
		String UserName=sc.next();
		sc.close();
		System.out.println("Your name is" + UserName);
		char [] nameAsCharacters=UserName.toCharArray();
		int lengthofCharacterAray=nameAsCharacters.length;
		System.out.println("Length of your name" +lengthofCharacterAray );
		for(int index=0; index<lengthofCharacterAray; index++) {
			System.out.println(index+" "+nameAsCharacters[index]);
		}
		
	}

}
